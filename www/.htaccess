# HTACCESS
#

# security
Options -Indexes
IndexIgnore *

# Activation Apache rewrite mode
RewriteEngine On

# Rewrite from index.html to index.php 
RewriteCond %{REQUEST_URI} !^index\.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-z0-9\-\/]*)?$ index.php?$1 [L]